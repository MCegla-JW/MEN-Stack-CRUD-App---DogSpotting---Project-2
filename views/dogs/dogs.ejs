<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Dogs</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/forms.css">
    <script defer src="/script/app.js" type="text/javascript"></script>
</head>

<body class="home">
    <nav class="navbar">
        <div class="navdiv">
            <div class="nav-left">
                <img class="app-logo" src="/assets/images/App-Logo.png" alt="image of a brown dog with a bone">
                <div class="app-name">
                    <span>DOG</span>
                    <span>SPOTTING</span>
                </div>
            </div>
            <div class="nav-right">
                <%- include('../partials/_navbar.ejs') %>
                    <a href="/auth/sign-out"><button class="btn">Sign Out</button></a>
            </div>
        </div>
    </nav>
    <main>
        <div class="dog-list-layout">
            <h1>All Dog Spots</h1>
            <ul>
                <% dogs.forEach(dog=> { %>
                    <li>
                        <a href="/dogs/<%= dog._id %>">
                            <img src="<%= dog.photoURL ? dog.photoURL : '/assets/images/placeholder.png' %>"
                                alt="<%= dog.name %>" class="dog-list-image">

                        </a>
                        <span>
                            <a href="/dogs/<%= dog._id %>">
                                <%= dog.name %>
                            </a>
                        </span>
                    </li>
                    <% }) %>
            </ul>
        </div>
    </main>
</body>

</html>