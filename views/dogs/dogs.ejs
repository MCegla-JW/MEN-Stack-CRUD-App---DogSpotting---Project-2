<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Dogs</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/forms.css">
</head>

<body class="home">
    <nav class="navbar">
        <div class="navdiv">
            <div class="nav-left">
                <img class="app-logo" src="/assets/images/App-Logo.png" alt="image of a brown dog with a bone">
                <div class="app-name">
                    <span>DOG</span>
                    <span>SPOTTING</span>
                </div>
            </div>
            <div class="nav-right">
                <%- include('../partials/_navbar.ejs') %>
                    <a href="/auth/sign-out"><button class="btn">Sign Out</button></a>
            </div>
        </div>
    </nav>
    <main>
        <div class="main-content-home">
            <h1>All Dogs</h1>
            <ul>
                <% dogs.forEach(dog=> { %>
                    <li><a href="/dogs/<%= dog._id %>">
                            <%= dog.name %>
                        </a></li>
                    <% }) %>
            </ul>
            <h2>My Liked Dogs</h2>
            <ul>
                <% dogs.forEach(dog=> { %>
                    <li><a href="/dogs/<%= dog._id %>">
                            <%= dog.name %>
                        </a></li>
                    <% }) %>
            </ul>
        </div>
        <div class="hero-home">
            <img class="hero-image" src="/assets/images/Hero-Image.PNG" alt="cartoon of a small white dog smiling">
        </div>
    </main>
</body>

</html>